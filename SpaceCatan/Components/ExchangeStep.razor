<div class="columns is-mobile">
	<div class="column">
		<img src="@Resources.GetResourceImage(Input)" @onclick="async () => await CycleInput.InvokeAsync()" />
	</div>
	<div class="column has-text-centered">
		<svg viewBox="0 0 100 100">
			<text x="0" y="50" dominant-baseline="middle" fill="white" font-size="20">@Rate</text>
			<line x1="15" y1="50" x2="91" y2="50" stroke="white" stroke-width="2" />
			<line x1="60" y1="20" x2="90" y2="50" stroke="white" stroke-width="2" />
			<line x1="60" y1="80" x2="90" y2="50" stroke="white" stroke-width="2" />
			<text x="93" y="50" dominant-baseline="middle" fill="white" font-size="20">1</text>
		</svg>
	</div>
	<div class="column">
		<img src="@Resources.GetResourceImage(Output)" @onclick="async () => await CycleOutput.InvokeAsync()" />
	</div>
</div>
<hr />


@code {
	[Parameter]
	public int Rate { get; set; }
	[Parameter]
	public Resource Input { get; set; }
	[Parameter]
	public Resource Output { get; set; }
	[Parameter]
	public EventCallback CycleInput { get; set; }
	[Parameter]
	public EventCallback CycleOutput { get; set; }
}